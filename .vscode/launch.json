      "program": "${env:PNPM_HOME}/global/5/node_modules/@microsoft/rush/lib/start.js",
      "skipFiles": ["<node_internals>/**"],
      "args": ["rebuild", "--only", "@kcinternals/heft-esbuild-plugin", "--only", "@kcws-example/node-app"]
