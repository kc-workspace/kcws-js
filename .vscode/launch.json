    {
      "type": "node",
      "request": "launch",
      "name": "Debug heft command",
      "program": "${workspaceFolder}/packages/github-actions/node_modules/@rushstack/heft/lib/start.js",
      "skipFiles": ["<node_internals>/**"],
      "args": ["test", "--test-path-pattern", "environments.test"],
